@page "/account/login"
@using BytexDigital.Blazor.Components.CookieConsent
@model OwaspTool.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="mt-15 authlib-reset">
    <div class="authlib-form-container">
        <h1>Log in</h1>

        @if (Model.IsLoggedIn)
        {
            <div class="alert alert-success">
                <strong>Hi @Model.LoggedUserDisplayName, you are already logged in.</strong>
            </div>
        }
        else
        {
            <form method="post" novalidate>
                <div asp-validation-summary="All" class="text-danger validation-summary mb-3"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="Input.RememberMe" class="form-check-input" disabled="@(!Model.PersistentCookiesAllowed)" />
                    <label asp-for="Input.RememberMe" class="form-check-label">Remember me</label>
                </div>
                @if (!Model.PersistentCookiesAllowed)
                {
                    <div class="form-text" style="color:#E76F51">
                        <p>Persistent cookies are disabled. Enable them in the cookie preferences to use this option.</p>
                    </div>
                }

                <button type="submit" class="btn btn-primary btn-block" style="margin-bottom:20px;">Log in</button>
            </form>
            @* Global server-set error (generic or email-confirmation) *@
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}